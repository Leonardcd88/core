# Run style checks

cd "$(dirname "$0")/.."

echo "Checking style with flake8..."
flake8 --exclude www_static homeassistant

FLAKE8_STATUS=$?

echo "Checking style with pylint..."
pylint homeassistant
PYLINT_STATUS=$?

if [ $FLAKE8_STATUS -eq 0 ]
then
  exit $FLAKE8_STATUS
else
  exit $PYLINT_STATUS
fi
