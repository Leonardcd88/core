#!/bin/sh
# Sets up python-openzwave.
# Dependencies that need to be installed:
# apt-get install cython3 libudev-dev python3-sphinx python3-setuptools

# Stop on errors
set -e

cd "$(dirname "$0")/.."

if [ ! -d build ]; then
  mkdir build
fi

cd build

if [ -d python-openzwave ]; then
  cd python-openzwave
  git pull --recurse-submodules=yes
  git submodule update --init --recursive
else
  git clone --branch python3 --recursive --depth 1 https://github.com/casaiq/python-openzwave/commit/4294892d7e6fca77f118ef5ac0826227d3270a46
  cd python-openzwave
fi

git checkout python3
pip3 install --upgrade cython==0.24.1
PYTHON_EXEC=`which python3` make build
PYTHON_EXEC=`which python3` make install

mkdir -p /usr/local/share/python-openzwave
cp -R openzwave/config /usr/local/share/python-openzwave/config
